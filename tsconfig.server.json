{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "outDir": "./dist/server/",
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["server.ts", "src/**/*.ts"],
  "exclude": [
    "**/*.spec.ts",
    "src/test.ts",
    "src/main.ts",
    "src/polyfills.ts",
    "src/environments/**"
  ],
  "angularCompilerOptions": {
    "enableIvy": true
  }
}
